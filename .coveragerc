[run]
branch = True
# restrict measurement to your package (adjust name if you rename it)
source = 
    skwdro

[report]
# show which lines are missing in terminal report
show_missing = True
# omit test files, example code, docs, and packaging cruft
# Also omit operation research estimators which are not as well tested as the others
omit =
    */tests/*
    */test_*.py
    */examples/*
    */doc/*
    setup.py
    pyproject.toml
    main.py
    */__init__.py
    */__main__.py
    */conftest.py
    skwdro/neural_network
    skwdro/_template.py
    skwdro/solvers/__entropic_dual_torch_epsilon.py
    skwdro/operations_research

# treat these markers as "excluded" (useful for generated/conditional code)
exclude_lines =
    pragma: no cover
    # Don't complain about debug-only code
    if __name__ == .__main__.:
    if __name__ == "__main__":
    if typing.TYPE_CHECKING:
    # typical library-level guards
    if 0:
    if False:
    @abc.abstractmethod
    @abstractmethod
    raise NotImplementedError()
    @overload
    # Will separate into another file with tests later (TODO)
    CompositeOptimizer

[html]
directory = coverage_html_report

[xml]
output = coverage.xml

[paths]
# if you sometimes run coverage from a different working dir or with src layout
source =
    .
    skwdro
